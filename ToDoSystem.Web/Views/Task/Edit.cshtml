@model ToDoSystem.Dtos.Task.TaskPutDto

@{
    ViewData["Title"] = "Editar tarefa";
}

<h1 class="container d-flex justify-content-center">Editar tarefa - @Model.Name</h1>
<hr />

<div class="row">
    <div class="col-md-4 container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"><strong>Tarefa</strong></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"><strong>Descrição</strong></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"><strong>Andamento</strong></label>
                <select asp-for="Status" class="form-control shadow-none">
                    <option value="ToDo">A fazer</option>
                    <option value="InProgress">Prosseguindo</option>
                    <option value="Concluded">Concluída</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group btn-box d-flex justify-content-between mt-3">
                <button type="submit" value="Salvar" class="btn btn-success" style="width:205px;"><i class="bi bi-pencil p-1"></i>Salvar</button>
                <a class="btn btn-info" asp-controller="Task" asp-action="Index" style="width:205px;"><i class="bi bi-arrow-left-circle p-1"></i>Voltar</a>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
